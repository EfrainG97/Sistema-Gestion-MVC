@model P2_SistemaDeGestion.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container">
    <h1 class="mb-4 text-warning">Editar Producto</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Modificar Información del Producto</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Precio" class="form-label fw-bold">Precio</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Precio" class="form-control" />
                            </div>
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Existencia" class="form-label fw-bold">Existencia</label>
                            <input asp-for="Existencia" class="form-control" />
                            <span asp-validation-for="Existencia" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-warning me-md-2">
                                <i class="fas fa-save"></i> Guardar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
