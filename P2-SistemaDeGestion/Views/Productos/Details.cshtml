@model P2_SistemaDeGestion.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="container">
    <h1 class="mb-4 text-info">Detalles del Producto</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Información del Producto</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">Nombre:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>
                        
                        <dt class="col-sm-4 fw-bold">Descripción:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>
                        
                        <dt class="col-sm-4 fw-bold">Precio:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-success fs-6">$@Html.DisplayFor(model => model.Precio)</span>
                        </dd>
                        
                        <dt class="col-sm-4 fw-bold">Existencia:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary fs-6">@Html.DisplayFor(model => model.Existencia) unidades</span>
                        </dd>
                    </dl>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-md-2">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
