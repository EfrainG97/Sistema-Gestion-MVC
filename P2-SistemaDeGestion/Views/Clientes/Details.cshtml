@model P2_SistemaDeGestion.Models.Cliente

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="container">
    <h1 class="mb-4 text-info">Detalles del Cliente</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Información del Cliente</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">Nombre:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>
                        
                        <dt class="col-sm-4 fw-bold">Apellido Paterno:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ApellidoPaterno)</dd>
                        
                        <dt class="col-sm-4 fw-bold">Apellido Materno:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ApellidoMaterno)</dd>
                        
                        <dt class="col-sm-4 fw-bold">Teléfono:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>
                    </dl>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-md-2">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
